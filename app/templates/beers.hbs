<ul class="list pl3">
  {{#each this.model as |beer|}}
    <li>
      {{beer.name}} by <em>{{beer.type}}</em>
      <span class="rr-rating fr">{{beer.alcoholPercentage}}</span>
    </li>
  {{/each}}
</ul>

<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each this.model as |beer|}}
      <li class="rr-list-item">
        <LinkTo @route="brewery.beers" @model={{beer.id}} class="rr-band-link">
          {{beer.name}} 
          <span class="rr-pointer"> {{fa-icon "angle-right"}} </span>
        </LinkTo>
      </li>
    {{/each}}
  </ul>
</div>
<div class="rr-main-panel">
{{outlet}}
</div>