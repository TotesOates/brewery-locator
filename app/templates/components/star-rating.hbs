{{#if hasBlock}}
  {{yield stars}}
{{else}}
  {{#each this.stars as |star|}}
    <button class="rating-star" {{on "click" (fn this.setRating star.rating)}}>
    {{#if star.isFull}}
      <FaIcon @icon="star" @prefix="fas" />
    {{else}}
      <FaIcon @icon="star" @prefix="far" />
    {{/if}}
    </button>
  {{/each}}
{{/if}}