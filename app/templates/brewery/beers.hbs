<ul class="rr-list">
  {{#each this.model.beer as |beer|}}
    <li class="rr-list-item">
      {{beer.name}} 
      <br/>  
      {{beer.alcoholPercentage}} % ABV
      
      <StarRating
      class="fr"
      @rating={{beer.rating}}
      @item={{beer}}
      @onClick={{fn this.updateRating beer}}
      />
      {{#each this.stars as |star|}}
      <span class="glyphicon {{if star.isFull 'glyphicon-star' 'glyphicon-star-empty'}}" />
      {{/each}}
    </li>
  {{else}}
    <li class="tc">
      No {{this.model.title}} Beers yet, why don't you <a href="#" {{on "click" this.addBeer}}>create one?</a>
    </li>
  {{/each}}
</ul>

<div class="rr-new-label">
  {{#if this.isAddingBeer}}
    <form class="rr-inline-form" {{on "submit" this.saveBeer}}>
      <Input
      @type="text"
      @value={{this.newBeerName}}
      class="rr-input"
      placeholder="New Beer"
      />

      <Input
      @type="number"
      @value={{this.newBeerPercentage}}
      class="rr-input"
      placeholder="Beer Percentage"
      />

    <div class="rr-inline-form-group ml-auto">
      <button type="submit" class="rr-action-button" disabled={{this.isAddButtonDisabled}}>Add</button>
      <button class="rr-cancel-icon" {{on "click" this.cancelAddBeer}}>
        {{fa-icon "times"}}
      </button>
    </div>
    </form>
  {{else}}
    <label {{on "click" this.addBeer}}>
      {{fa-icon "plus"}}
      <span class="ml1">Add new Beer</span>
    </label>
  {{/if}}
</div>
